<h1>Мої замовлення</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class='row'>
      <div class='col s6 offset-s3'>
        <div class='card'>
          <div class='card-content'>
            <span class='card-title'>
              Замовлення
              <small> {{_id}}</small>
            </span>
            <p class='date'>{{date}}</p>
            <p>CLIENT: <em>{{user.userId.name}}</em></p>
            <p>EMAIL: <em>({{user.userId.email}})</em></p>

            <ol>
              {{#each courses}}
                <li>
                  {{course.title}}
                  (x<strong>{{course.count}}</strong>)
                  <p>Ціна:<span class='price'>{{course.price}}</span></p>
                </li>
              {{/each}}
            </ol>
            <hr />
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Замовлень поки немає</p>
{{/if}}