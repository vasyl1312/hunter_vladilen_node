<h1>Кошик</h1>

<div id='card'>
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Назва курсу</th>
          <th>Кількість</th>
          <th>Дія</th>
        </tr>
      </thead>

      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class='btn btn-small js-remove'
                data-id='{{id}}'
                data-csrf='{{@root.csrf}}'
              >Видалити</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>

    <p><strong>Ціна:</strong><span class='price'>{{price}}</span></p>

    <form action='/orders' method='POST'>
      <input type='hidden' name='_csrf' value='{{csrf}}' />
      <button type='submit' class='btn'>Замовити</button>
    </form>
  {{else}}
    <p>Кошик пустий</p>
  {{/if}}
</div>