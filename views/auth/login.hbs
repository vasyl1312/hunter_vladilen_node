<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'><a class='active' href='#login'>Увійти</a></li>
        <li class='tab col s6'><a href='#register'>Реєстрація</a></li>

      </ul>
    </div>
    <div id='login' class='col s6 offset-s3'>
      <h1>Увійти в магазин</h1>
      <form action='/auth/login' method='POST'>
        <div class='input-field'>
          <input id='email' name='email' type='email' class='validate' required />
          <label for='email'>Email</label>
          <span class='helper-text' data-error='Введіть email'> </span>
        </div>

        <div class='input-field'>
          <input id='password' name='password' type='password' class='validate' required />
          <label for='password'>Пароль</label>
          <span class='helper-text' data-error='Введіть пароль'> </span>
        </div>

        <button class='btn btn-primary' type='submit'>Увійти</button>
      </form>
    </div>

    <div id='register' class='col s6 offset-s3'>
      <h1>Створити акаунт</h1>
      <form action='/auth/register' method='POST'>
        <div class='input-field'>
          <input id='remail' name='email' type='email' class='validate' required />
          <label for='remail'>Email</label>
          <span class='helper-text' data-error='Введіть email'> </span>
        </div>

        <div class='input-field'>
          <input id='rpassword' name='password' type='password' class='validate' required />
          <label for='rpassword'>Пароль</label>
          <span class='helper-text' data-error='Введіть пароль'> </span>
        </div>

        <div class='input-field'>
          <input id='confirm' name='confirm' type='password' class='validate' required />
          <label for='confirm'>Пароль ще раз</label>
          <span class='helper-text' data-error='Введіть пароль'> </span>
        </div>

        <button class='btn btn-primary' type='submit'>Зареєструватися</button>
      </form>
    </div>
  </div>
</div>